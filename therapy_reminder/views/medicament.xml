<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- therapy.medicament tree view -->
    <record id="therapy_medicament_view_tree" model="ir.ui.view">
        <field name="name">therapy.medicament.view.tree</field>
        <field name="model">therapy.medicament</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="medicament_type"/>
                <field name="quantity"/>
            </tree>
        </field>
    </record>

    <!-- therapy.medicament form view -->
    <record id="therapy_medicament_view_form" model="ir.ui.view">
        <field name="name">therapy.medicament.view.form</field>
        <field name="model">therapy.medicament</field>
        <field name="arch" type="xml">
            <form string="Medicament">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="medicament_type"/>
                        <field name="quantity"/>
                    </group>
                    <notebook>
                        <page name="timetable" string="Timetable">
                            <field name="timetable"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="therapy_medicament_action" model="ir.actions.act_window">
        <field name="name">Therapy medicaments</field>
        <field name="res_model">therapy.medicament</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Add your first medicament
            </p>
        </field>
    </record>

    <menuitem
        id="therapy_medicament_menu"
        name="Medicaments"
        parent="therapy_main_menu"
        action="therapy_medicament_action"
        sequence="20"/>

</odoo>
