<?xml version='1.0' encoding='utf-8'?>
<odoo>
  <record id="domain_health_status_alert" model="mail.template">
    <field name="name">Domain down: Alert</field>
    <field name="model_id" ref="res_partner"/>
    <field name="email_from">${object.user_id.email_formatted |safe}</field>
    <field name="email_to">${object.email_id}</field>
    <field name="subject">Domain down: Alert!!!</field>
    <field name="body_html">
      <div style="margin: 0px; padding: 0px;">
        <p style="margin: 0px; padding: 0px; font-size: 13px;">
          Dear ${object.name},
        </p>
        <p style="margin: 0px; padding: 0px; font-size: 13px;">
          We have notified your domain is <span style="color: red;">down</span> at this time.
        </p>
        <p style="margin: 0px; padding: 0px; font-size: 13px;">
          Please, contact with your domain provider as soon as possible.
        </p>
        <p style="margin: 0px; padding: 0px; font-size: 13px;">
          Best regards,
        </p>
      </div>
    </field>
    <field name="report_template" ref="report_domain_health_alert"/>
    <field name="report_name">Alert mail</field>
  </record>
</odoo>